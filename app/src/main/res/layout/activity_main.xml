<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B0E0E"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/ActivityTxt"
        android:layout_width="328dp"
        android:layout_height="86dp"
        android:text="Radio Button and Radio Group"
        android:textAlignment="center"
        android:textColor="#FFC107"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.153" />

    <RadioGroup
        android:id="@+id/colorsRdoGrp"
        android:layout_width="197dp"
        android:layout_height="266dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.526">

        <RadioButton
            android:id="@+id/redRdo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RED"
            android:textAlignment="center"
            android:textColor="#FF0000"
            tools:textSize="20sp"
           />

        <RadioButton
            android:id="@+id/cyanRdo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CYAN"
            android:textAlignment="center"
            android:textColor="#00BCD4"
            tools:textSize="20sp"
          />

        <RadioButton
            android:id="@+id/pinkRdo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PINK"
            android:textAlignment="center"
            android:textColor="#E91E63"
            tools:textSize="20sp"
           />

        <RadioButton
            android:id="@+id/violetRdo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VIOLET"
            android:textAlignment="center"
            android:textColor="#673AB7"
            tools:textSize="20sp"
           />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>